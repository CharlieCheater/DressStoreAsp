@{
    ViewData["Title"] = "Login Page";
}
@model LoginViewModel
<div class="text-center">
   <div class="card w-25">
       <div class="card-body">
           <form asp-action="Login">
               <div class="row text-center">
                   <h3>Авторизация</h3>
               </div>
               <div class="row form-group">
                   <label>Логин</label>
                    <input asp-for="ReturnUrl" hidden class="form-control form-control-sm" type="text" />
                   <input asp-for="Username" class="form-control form-control-sm" type="text" />
                   <span asp-validation-for="Username" class="text text-sm text-danger"></span>
               </div>
               <div class="row form-group">
                   <label>Пароль</label>
                   <input asp-for="Password" class="form-control form-control-sm" type="password" />
                   <span asp-validation-for="Password" class="text text-sm text-danger"></span>
               </div>
               <div class="text-center">
                   <button type="submit" class="btn btn-primary btn-sm">Войти</button>
                   <a asp-action="Register" class="btn btn-secondary btn-sm">Регистрация</a>
               </div>
           </form>
       </div>
   </div>
</div>
